<div class="form-group">
    <label for="">Title</label>
    <input type="text" name="title" id="" class="form-control mt-1" value="<%= title %>">
</div>

<div class="form-group mt-1">
    <label for="">Description</label>
    <input type="text" name="description" id="" class="form-control mt-1" value="<%= description %>">
</div>

<div class="form-group mt-1">
    <label for="">Content</label>
    <textarea name="content" id="" cols="30" rows="5" class="form-control mt-1"><%= content %></textarea>
</div>

<a class="btn btn-secondary mt-3" href="/" role="button">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>